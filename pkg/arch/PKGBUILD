# Maintainer: Moltis Contributors
pkgname=moltis
pkgver=0.1.0
pkgrel=1
pkgdesc="Personal AI gateway inspired by OpenClaw"
arch=('x86_64' 'aarch64')
url="https://www.moltis.org/"
license=('MIT')
depends=('gcc-libs')
makedepends=('cargo')

build() {
    cd "$srcdir"
    cargo build --release --manifest-path="${startdir}/../../Cargo.toml"
}

package() {
    install -Dm755 "${startdir}/../../target/release/moltis" "${pkgdir}/usr/bin/moltis"
    install -Dm644 "${startdir}/../../LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE" 2>/dev/null || true
}
